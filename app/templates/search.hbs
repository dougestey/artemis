<ContainerBlock>
  <section class="ContainerBlock-child--33">
    <CommandLine
      @onResult={{action "setResult"}}
      @onSelect={{action "pushResult"}}
      @focusCommandLine={{focusCommandLine}}
      @message={{message}} />

    {{#liquid-if results.length class="SearchResults"}}

      {{#each results as |result|}}
        <SearchResult
          @result={{result}}
          @onSelect={{action "pushResult" }} />
      {{/each}}

    {{/liquid-if}}
  </section>

  <div class="SelectedEntities ContainerBlock-child--66">
    {{#each selected as |entity|}}
      <SelectedEntity
        @entity={{entity}}
        @removeEntity={{action "removeEntity"}} />
    {{/each}}
  </div>

</ContainerBlock>
